<h1>Exercises</h1><br>

<table id='tabs4' class='table table-bordered'>
  <thead>
    <tr>
      
      <th id='wname'>Exercise Name</th>
      
      <th id='emus'>Target Muscles</th>
      <th id='eset'>Total Sets</th>
      <th id='wopt'>Exercise Options</th>
    </tr>
  </thead>
  <tbody>
           <% @exercises.each do |exercise| %>
      <tr>
        
        
        <td><%= link_to exercise.name, exercise %></td>
       
        <td><%= exercise.muscle_target %></td>
        <td><%= pluralize(exercise.reps.size, "Sets") %></td>
        <td>
         <p class='linx'> <%= link_to 'Display', exercise %> </p>
         <p class='linx'> <%= link_to 'Edit', edit_exercise_path(exercise) %> </p>
         <p class='linx'> <%= link_to 'Delete', exercise, method: :delete, data: { confirm: 'Are you sure?' } %> </p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<button id='ecreate' class='btn btn-small btn-primary'><%= link_to 'Create New Exercise', new_exercise_path %></button>
<button id='wview' class='btn btn-small btn-primary'><%= link_to 'View Workout List', workouts_path %></button>