  <% provide(:title, 'Sign Up') %>
<div id="signup2">  
    <h1 id='areg'>Account Registration</h1>
    <%= simple_form_for (@user) do |f| %>
    <%= render 'shared/error_messages', object: @user %>
  <div class="row-fluid">
    <div class="span6">
      <div class="control-group">
         <div id="col1">
            <%= f.label 'Name' %>
            <%= f.text_field :name %>

            <%= f.label 'Email' %>
            <%= f.text_field :email %>

            <%= f.label 'Password' %>
            <%= f.password_field :password %>

            <%= f.label 'Password Confirmation' %>
            <%= f.password_field :password_confirmation %>
         </div>


      </div>
    </div>
    <div class="span6">
      <div class="control-group">
        <div id="col2">
          
          <%= f.label 'Gender' %>
          <%= f.input_field :gender, collection: [:Male, :Female]  %>
          
          <%= f.label 'Age' %>
          <%= f.input_field :bday, collection: 18..99, prompt: "Select Age" %>
          
          <%= f.label 'Height' %>
          <%= f.input_field :height, collection: "36".."90" , prompt: "Select Height (Inches)" %>

          <%= f.label 'Weight' %>
          <%= f.text_field :weight %>
          <p id='regbut'><%= f.submit "Create Account", class: "btn btn-small btn-primary" %></p>
        </div>     
      </div>
    </div>
        
      <% end %>
  </div>
</div>