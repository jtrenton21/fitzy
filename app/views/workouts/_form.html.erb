<%= simple_form_for(@workouts) do |f| %>
  <% if @workouts.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@workouts.errors.count, "error") %> prohibited this workout from being saved:</h2>
      <ul>
      <% @workouts.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %><br>
  </div>
  <div id='wday' class="field">
  
  <%= f.input :workout_focus, collection: ["Get Big", "Loose Weight", "Increase Flexibility", "General Health"]%><br>
